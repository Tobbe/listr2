{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["**", "!dist/**"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["^test"],
      "inputs": ["**"],
      "outputs": ["dist/**"]
    },
    "docs:build": {
      "dependsOn": ["^docs:build"],
      "inputs": ["**"],
      "outputs": [".vuepress/dist/**", ".vuepress/.temp/**", ".vuepress/.cache/**"]
    },
    "lint": {
      "inputs": ["**"]
    },
    "format": {
      "inputs": ["**"],
      "outputs": ["**"]
    },
    "dev:start": {}
  }
}
