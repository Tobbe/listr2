{
  "name": "@listr2/root",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepository for listr2.",
  "license": "MIT",
  "repository": "https://github.com/listr2/listr2",
  "type": "module",
  "author": {
    "name": "Cenk Kilic",
    "email": "cenk@kilic.dev",
    "url": "https://cenk.kilic.dev"
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=8.0.0"
  },
  "workspaces": [
    "packages/*",
    "examples",
    "docs"
  ],
  "scripts": {
    "clean": "rimraf node_modules pnpm-lock.yaml packages/*/node_modules examples/node_modules docs/node_modules",
    "dev:start": "pnpm run --parallel -r dev:start",
    "build": "pnpm run -r build",
    "docs:build": "pnpm run --filter docs docs:build",
    "format": "pnpm run --parallel -r format",
    "lint": "pnpm run --parallel -r lint",
    "test": "pnpm run --sequential -r test"
  },
  "simple-git-hooks": {
    "pre-commit": "[ -n \"$SKIP_GIT_HOOKS\" ] && true || pnpm exec lint-staged",
    "prepare-commit-msg": "[ -t 1 ] && exec < /dev/tty && git cz --hook || true",
    "pre-push": "[ -n \"$SKIP_GIT_HOOKS\" ] && true || pnpm run test"
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx,spec.ts}": [
      "prettier --log-level warn --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --log-level warn --write"
    ]
  },
  "devDependencies": {
    "@cenk1cenk2/cz-cc": "^1.6.7",
    "@cenk1cenk2/eslint-config": "^2.7.19",
    "@swc/core": "1.3.82",
    "@tsconfig/node16": "^16.1.1",
    "@types/node": "^20.6.2",
    "eslint": "^8.49.0",
    "execa": "^8.0.1",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "simple-git-hooks": "^2.9.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tsup": "7.2.0",
    "typescript": "^5.2.2",
    "ts-jest": "^29.1.1",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.5",
    "jest": "^29.7.0",
    "jest-mock-process": "^2.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@cenk1cenk2/cz-cc"
    }
  }
}
